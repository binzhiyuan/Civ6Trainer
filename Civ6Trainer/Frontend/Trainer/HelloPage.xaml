<UserControl x:Class="tctianchi.Civ6Trainer.Frontend.Trainer.HelloPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tctianchi.Civ6Trainer.Frontend.Trainer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DockPanel>
            <Label Foreground="#737779" FontSize="15" FontWeight="Bold" DockPanel.Dock="Top">修改器自述</Label>
            <Border Height="2" Background="#e3e5e6" Margin="0,10" DockPanel.Dock="Top" />
            <TextBox Text="目前是个简陋的版本。"
                     FontSize="12" Foreground="#FF737779" Background="{x:Null}" BorderThickness="0"
                     VerticalScrollBarVisibility="Auto" IsReadOnly="True" DockPanel.Dock="Bottom" />
        </DockPanel>
        <Border Height="31" VerticalAlignment="Bottom" Background="#FF1F8DD6" BorderThickness="0" CornerRadius="4">
            <TextBlock Foreground="White" Padding="10,0" OverridesDefaultStyle="True" VerticalAlignment="Center"
                       Text="{Binding Path=PromptText}"/>
        </Border>
    </Grid>
</UserControl>
