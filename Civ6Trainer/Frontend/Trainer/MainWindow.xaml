                    <Border Height="2" Background="#323d4f" />



                    <Button Tag="CityPage" Name="btnB" Height="30" Width="92" Click="btnNav_Click">页面B</Button>-->

                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </UserControl>
        <GridSplitter x:Name="gridSplitter" Height="auto" Width="5" Grid.Column="0" Grid.Row="0" Background="#f7f9fa" />
        <UserControl Grid.Column="1" Grid.Row="0">

            <Frame Name="contentFrame" NavigationUIVisibility="Hidden"/>



