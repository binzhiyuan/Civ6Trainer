<Window x:Class="tctianchi.Civ6Trainer.Frontend.Trainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tctianchi.Civ6Trainer"
        xmlns:trinerControl="clr-namespace:tctianchi.Civ6Trainer.Frontend.Control"
        mc:Ignorable="d"
        Title="UI测试稿" Height="530" Width="660">

    <Grid Name="grid1" Width="auto" Height="auto" Background="#f7f9fa">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <ScrollViewer Grid.Column="0" Grid.Row="0"
                        VerticalScrollBarVisibility="Auto" Background="#354052" Padding="0,5,0,5">
            <trinerControl:TrainerMenuPanel></trinerControl:TrainerMenuPanel>
        </ScrollViewer>
        
        <GridSplitter x:Name="gridSplitter" Height="auto" Width="5" Grid.Column="0" Grid.Row="0" Background="#f7f9fa" />
        <UserControl Grid.Column="1" Grid.Row="0">

            <Frame Name="contentFrame" NavigationUIVisibility="Hidden"/>



        </UserControl>
    </Grid>


</Window>
